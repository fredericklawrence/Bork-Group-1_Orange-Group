
/**
 * Write a description of class DropCommand here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class DropCommand extends Command
{
  private String itemName;
  private static GameState state;
  DropCommand(String itemName)
  {
      this.itemName = itemName;
  }
  public String execute()
  {
      state = GameState.instance();
      Room currentRoom = state.getAdventurersCurrentRoom();
      
      //ArrayList<Item> item = 
      
      Item dropping = state.getItemFromInventoryNamed(itemName);
      if(dropping.getPrimary().equals(itemName)){
          currentRoom.add(dropping);
          state.removeFromInventory(dropping);
          return itemName + "dropped";
        }else{
            return dropping.getPrimary() + " is not in your inventory.\n";
        }
      //return "sorry";
  }
}
