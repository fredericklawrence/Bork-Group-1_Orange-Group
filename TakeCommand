import java.util.ArrayList;
/**
 * Write a description of class TakeCommand here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class TakeCommand extends Command
{
   private String itemName;
   private static GameState state;
   
   TakeCommand(String itemName)
   {
       this.itemName = itemName;
       state = GameState.instance();
   }
   public String execute()
   {
       Room currentRoom = state.getAdventurersCurrentRoom();
       ArrayList<Item> items = currentRoom.getContents();
       if (state.getInventoryNames().contains(itemName))
           return "You aleady possess the " + itemName+ ".\n";
           
       for (Item item : items){
           if(item.getPrimary().equals(itemName)){
               currentRoom.remove(item);
               state.addToInventory(item);
               return "\nAdded " + item.getPrimary()+ " to inventory\n";
               
            }else {
               return item.getPrimary() + " is not located in your current room.\n";
               }
        }
        return "Sorry";
   }
}
